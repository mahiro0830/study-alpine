doctype html
html(lang="ja")
  include inc/_head

  body

    include inc/_header

    main
      div(x-data="{ isOpen: false }")
        button(@click="isOpen = true") Open Modal

        div(x-show="isOpen" @click.away="isOpen = false" x-transition)
          h2 Modal Title
          p Modal Content...
          button(@click="isOpen = false") Close Modal

    include inc/_footer
